<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <%= form_with(model: [@article, @article.comments.build], local: true) do |form| %>
      <p>
        <%= form.label :commenter %>
        <%= form.text_field :commenter %>
      </p>
      <p>
        <%= form.label :body%> <br>
        <%= form.text_area :body %>
      </p>
      <p>
        <%= form.submit %>
      </p>

    <% end %>
    <%= link_to 'Edit Article', edit_article_comment(@article) %> |
    <%= link_to 'Go Back', articles_path %>

  </body>
</html>
